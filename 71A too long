#include <iostream>
#include <cstring>

using namespace std;

const int MAXN = 101;
char str[MAXN];
int main() {
    int n;
    cin >> n;
    for (int i=1;i<=n;i++) {
        cin >> str;
        if (strlen(str)>10) cout << str[0] << strlen(str)-2 << str[strlen(str)-1] << endl;
        else cout << str << endl;;
    }
    return 0;
}
